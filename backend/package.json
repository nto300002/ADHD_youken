{
  "name": "adhd-youken-backend",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "wrangler deploy --dry-run",
    "deploy": "wrangler deploy",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply adhd-youken-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply adhd-youken-db"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.4.1",
    "drizzle-orm": "^0.36.4",
    "hono": "^4.6.14",
    "nanoid": "^5.1.6",
    "octokit": "^4.0.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.12.12",
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.2",
    "@vitest/runner": "3.2.4",
    "@vitest/snapshot": "3.2.4",
    "drizzle-kit": "^0.28.1",
    "eslint": "^9.17.0",
    "jest": "^29.7.0",
    "jest-environment-miniflare": "^2.14.4",
    "msw": "^2.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2",
    "vitest": "^3.2.4",
    "wrangler": "^4.65.0"
  }
}
